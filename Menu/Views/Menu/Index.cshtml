@model List<Menu.Models.Dish>
@{
    ViewData["Title"]="MenuIndex";
}

<div class="container">
    <div class="row">
        @foreach(var dish in Model)
        {
            <div class="col-6">
                <div class="d-flex justify-content-center">
                    <h1>@dish.Name</h1>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@dish.ImageUrl" style="width: 70%;" />
                </div>
                <div class="d-flex justify-content-center">
                    @dish.Price.ToString("N2") Dollars
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@dish.Id">
                        See details
                    </a>
                </div>
            </div>
        }
    </div>
</div>